<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.padc.interactive_training">

    <application
        android:name=".InteractiveTrainingApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".activities.ArticlesActivity"
            android:label="@string/title_activity_articles"
            android:parentActivityName=".activities.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.padc.interactive_training.activities.HomeActivity" />
        </activity>
        <activity
            android:name=".activities.ArticleDetailActivity"
            android:label="@string/title_activity_article_detail"
            android:parentActivityName=".activities.ArticlesActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.padc.interactive_training.activities.ArticlesActivity" />
        </activity>


        <activity
            android:name=".activities.TestActivity"
            android:label="@string/title_activity_test"
            android:parentActivityName=".activities.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.padc.interactive_training.activities.HomeActivity" />
        </activity>

        <activity
            android:name=".activities.RegisteredCourseDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activities.DiscussionDetailActivity"
            android:label="Discussion Details"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.RegisteredCourseDetailActivity" />

        <activity android:name=".activities.NewDiscussionActivity"
            android:label="New Discussion"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.RegisteredCourseDetailActivity" />

        <activity
            android:name=".activities.CourseFlowActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base.NoActionBar" />

        <activity
            android:name=".activities.PopupQuestionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base.NoActionBar.FullScreen" />

    </application>

</manifest>