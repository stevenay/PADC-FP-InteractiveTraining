<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/page_swipe_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_smallest"
    android:background="@drawable/card_border_color"
    app:cardCornerRadius="@dimen/margin_small"
    app:cardElevation="@dimen/margin_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_page_number_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_weight="0"
            android:gravity="center_horizontal"
            android:text="1 of 10 pages"
            android:textSize="@dimen/text_small"
            android:textStyle="bold" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:clipToPadding="false"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_lesson_image"
                    android:layout_width="@dimen/lesson_image_size"
                    android:layout_height="@dimen/lesson_image_size"
                    android:layout_below="@id/tv_page_number_top"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_image" />

                <com.padc.interactive_training.components.MMTextView
                    android:id="@+id/tv_lesson_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_lesson_image"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_large"
                    android:fontFamily="sans-serif-light"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingLeft="@dimen/margin_medium_2"
                    android:paddingRight="@dimen/margin_medium_2"
                    android:text="ပါတယ္။ သူက radiation ေတြကိုပါ ကာကြယ္နိုင္စြမ္းရွိပါတယ္။"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_regular_2.5x" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <ImageButton
                android:id="@+id/btn_comment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_chat_24dp" />

            <ImageButton
                android:id="@+id/btn_request_article"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_toRightOf="@id/btn_comment"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_record_voice_over_24dp" />

            <ImageButton
                android:id="@+id/btn_pin"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_pin_image" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
